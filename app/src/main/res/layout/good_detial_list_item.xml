<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="1dp"
    android:layout_marginTop="0.5dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/store_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:text="高世德店"
            android:textColor="#333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon_good"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/name_tv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon_good"
            android:text="888666333"
            android:textColor="#cccccc"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/icon_good"
            android:text="大福珠"
            android:textColor="#333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/name_tv"
            android:text="$799"
            android:layout_marginBottom="10dp"
            android:textColor="#EE5C42"
            android:textSize="16sp" />


        <View
            android:id="@+id/line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="30dp"
            android:background="#cccccc" />

        <FrameLayout
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="1"
                android:textColor="@color/login_btn_bg"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/repertory_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="20dp"
                android:text="庫存"
                android:textColor="#cccccc"
                android:textSize="12sp"
                android:textStyle="bold" />

        </FrameLayout>

        <View
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_width="1dp"
            android:background="@color/drag_btn_green"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
