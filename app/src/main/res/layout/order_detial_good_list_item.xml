<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="0.5dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/radio"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:checked="false"
            style="@style/LoginCheckbox"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:padding="5dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/icon_good"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/radio"
            android:layout_centerVertical="true"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/icon_good"
            android:text="大福珠"
            android:textColor="@color/blue_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/icon_good"
            android:text="888666333"
            android:textColor="@color/blue_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/code_tv"
            android:layout_toRightOf="@+id/icon_good"
            android:text="1g"
            android:textColor="@color/blue_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/origin_price_tv"
            android:textSize="12sp"
            android:textColor="@color/blue_text"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/weight_tv"
            android:layout_toRightOf="@+id/icon_good"
            android:text="原价： 527元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/discount_price_tv"
            android:textSize="12sp"
            android:textColor="@color/blue_text"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/origin_price_tv"
            android:layout_toRightOf="@+id/icon_good"
            android:text="售价： 47元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/status_tv"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="已回收"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/input_layout"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:visibility="gone"
            android:background="@drawable/border_gray"
            android:orientation="horizontal">

            <com.pos.priory.coustomViews.LastInputEditText
                android:id="@+id/edt_weight"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center"
                android:hint="重量"
                android:background="@null"
                android:textColor="@color/blue_text"
                android:inputType="numberDecimal"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:background="#cccccc"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:text="克"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="#f3f3f3"
                android:textColor="@color/blue_text"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:background="#cccccc"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
