<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="0.5dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_good"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:id="@+id/text_layout"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon_good"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大福珠"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1023"
                android:textColor="#333333"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weight_edt"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/border_gray"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/blue_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/weight_unit_tv"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:background="#cccccc"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="克"
                    android:textColor="@color/blue_text"
                    android:textSize="15sp" />

            </LinearLayout>



        </LinearLayout>


        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$999"
            android:layout_above="@+id/fitting_count_layout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="#333333"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/fitting_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/decrease_btn"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="#cccccc"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/blue_text"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/fitting_count_tv"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_gray"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/blue_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/increase_btn"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="#cccccc"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/blue_text"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>
