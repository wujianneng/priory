<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="1dp"
    android:layout_marginTop="0.5dp"
    android:layout_marginRight="1dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_tv"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:text="莫小姐"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/sex_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/name_tv"
            android:src="@drawable/icon_boy" />

        <TextView
            android:id="@+id/detial_tv"
            android:layout_below="@+id/name_tv"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3415019840934"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detial_tv"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="2019-10-10 10:10:10"
            android:textColor="#4a4a4a"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:text="$1576.00"
            android:textColor="@color/drag_btn_green"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
           android:layout_alignParentBottom="true"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"
            android:text="狀態：正常"
            android:textColor="@color/drag_btn_green"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/right_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:visibility="gone"
            android:background="@color/drag_btn_red" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
