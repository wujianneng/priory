<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout"
        />


    <android.support.v7.widget.CardView
        android:id="@+id/gold_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:visibility="gone"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/name_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/icon_good"
                android:text="黃金"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/gold_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@+id/icon_good"
                android:text="1.02克"
                android:textColor="#333333"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/gold_count_edt"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@+id/gold_summit_btn"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/input_bg"
                android:hint="請輸入數量"
                android:textColor="@color/drag_btn_green"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/gold_summit_btn"
                android:layout_width="70dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:text="提交"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:foreground="?attr/selectableItemBackground"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/spar_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
