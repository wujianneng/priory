<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="2019-10-10"
            android:textColor="@color/blue_text"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="52dp"
            android:text="$1000"
            android:textColor="@color/blue_text"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/right_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="16dp"
            android:src="@drawable/icon_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#bababa" />

    </FrameLayout>

    <TextView
        android:id="@+id/product_title_tv"
        android:text="商品列表："
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/title_layout"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/product_listview"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/product_title_tv"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/day_sum_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/paytype_title_tv"
        android:text="支付方式列表："
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/product_listview"
        android:layout_marginTop="10dp"

        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/paytype_listview"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/paytype_title_tv"
        android:layout_toLeftOf="@+id/day_sum_btn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/day_sum_btn"
        android:layout_width="60dp"
        android:text="日結"
        android:background="@color/colorBlue"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title_layout"
        android:layout_height="40dp"/>

</RelativeLayout>
