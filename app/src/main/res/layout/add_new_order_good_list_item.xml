<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="0.5dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="1dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_good"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/icon_good"
            android:text="888666333"
            android:textColor="#cccccc"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/code_tv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon_good"
            android:text="大福珠"
            android:textColor="#333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon_good"
            android:text="$799"
            android:textColor="#EE5C42"
            android:textSize="17sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/btn_change_price"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/price_tv"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@color/login_btn_bg"
            app:cardCornerRadius="3dp"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:contentPadding="1dp">


            <ImageView
                android:id="@+id/icon_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_control" />

            <TextView
                android:id="@+id/text_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="5dp"
                android:text="调折扣"
                android:textColor="#fff"
                android:textSize="11sp" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/decrease_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/icon_decrease" />


            <TextView
                android:id="@+id/account_btn"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="1000"
                android:textColor="@color/login_btn_bg"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/increase_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/icon_increase" />

        </LinearLayout>

        <View
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_width="1dp"
            android:background="@color/drag_btn_red"
            android:layout_height="match_parent"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>
