<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/data_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:layout_collapseMode="parallax">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/dp_10">

                    <TextView
                        android:id="@+id/member_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="会员:  李先生"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/sex_img"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/member_name_tv"
                        android:src="@drawable/icon_boy" />

                    <TextView
                        android:id="@+id/member_phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/member_name_tv"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="3dp"
                        android:text="手机号码:  666777888"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/need_money_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/member_phone_tv"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="3dp"
                        android:text="客户应付: "
                        android:textColor="@color/blue_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/need_money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/member_phone_tv"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@+id/need_money_title"
                        android:text="$2305"
                        android:textColor="#DB2D43"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/payed_money_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/need_money_title"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="3dp"
                        android:text="客户付款: "
                        android:textColor="@color/blue_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/payed_money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/need_money_title"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@+id/need_money_title"
                        android:text="$2305"
                        android:textColor="#DB2D43"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/trasition_time_tv"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:text="交易时间：2019-10-10 12:20:20"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/update_time_tv"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/trasition_time_tv"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:text="更新时间：2019-10-10 12:20:20"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/order_number_tv"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/update_time_tv"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:text="订单号:  201805181220993"
                        android:textColor="#000000"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/gold_count_tv"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_number_tv"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:text="黄金：12件|15g"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/fitting_count_tv"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gold_count_tv"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:text="配件：6件"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <FrameLayout
                android:id="@+id/action_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <android.support.design.button.MaterialButton
                    android:id="@+id/btn_return"
                    android:layout_width="95dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="回收"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:cornerRadius="5dp" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/btn_change"
                    android:layout_width="95dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorAccent"
                    android:text="换货"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:cornerRadius="5dp" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="95dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="撤回"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:cornerRadius="5dp" />
            </FrameLayout>


            <com.pos.priory.coustomViews.DisableReclyerView
                android:id="@+id/good_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"></com.pos.priory.coustomViews.DisableReclyerView>

            <LinearLayout
                android:id="@+id/detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="使用优惠"
                    android:textColor="@color/blue_text"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.pos.priory.coustomViews.DisableReclyerView
                    android:id="@+id/discount_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="付款方式"
                    android:textColor="@color/blue_text"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.pos.priory.coustomViews.DisableReclyerView
                    android:id="@+id/paytype_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/operating_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gold_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:text="回收金价：372/克"
                    android:textColor="@color/blue_text"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/operating_weight_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:text="回收金重：2克"
                    android:textColor="@color/blue_text"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:elevation="3dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/operating_money_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:background="#f3f3f3"
                        android:text="回收金额：￥666"
                        android:textColor="@color/blue_text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_operator"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="确认回收"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>