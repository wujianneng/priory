<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="0.5dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/icon_good"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/icon_good"
            android:text="大福珠"
            android:textColor="@color/blue_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/icon_good"
            android:text="888666333"
            android:textColor="@color/blue_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sale_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/code_tv"
            android:layout_toRightOf="@+id/icon_good"
            android:text="銷量"
            android:textColor="@color/blue_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sale_amount_tv"
            android:textSize="12sp"
            android:textColor="@color/blue_text"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/sale_count_tv"
            android:layout_toRightOf="@+id/icon_good"
            android:text="銷售額"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/weight_tv"
            android:textSize="12sp"
            android:textColor="@color/blue_text"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/sale_amount_tv"
            android:layout_toRightOf="@+id/icon_good"
            android:text="平均重量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</android.support.v7.widget.CardView>
