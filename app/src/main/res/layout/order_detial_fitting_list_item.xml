<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="0.5dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/radio"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:checked="false"
            style="@style/LoginCheckbox"
            android:visibility="invisible"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:padding="5dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/icon_good"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/radio"
            android:layout_centerVertical="true"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/icon_good"
            android:text="配件3"
            android:textColor="@color/blue_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/price_tv"
            android:textSize="12sp"
            android:textColor="@color/blue_text"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/name_tv"
            android:layout_toRightOf="@+id/icon_good"
            android:text="单价： 527元"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sum_tv"
            android:textSize="12sp"
            android:textColor="@color/blue_text"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/price_tv"
            android:layout_toRightOf="@+id/icon_good"
            android:text="小计： 47元"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sale_tv"
            android:textSize="12sp"
            android:textColor="@color/blue_text"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/sum_tv"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/icon_good"
            android:text="售价： 47元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/count_tv"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="x4"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
